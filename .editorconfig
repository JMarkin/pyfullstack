root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{.babelrc, jest.config, .stylelintrc, .eslintrc, *.bowerrc, *.jsb3, *.jsb2, *.json, *vue, *.scss, *.jshintrc, *.jscsrc, *.js, *.js.map, *.yaml, *.yml, *tpl, *pug, *.ts}]
indent_size = 2
max_line_length = 80

[*.{babelrc,stylelintrc,eslintrc,bowerrc,jsb3,jsb2,json,vue,scss,jshintrc,jscsrc,js,js.map,yaml,yml,tpl,pug,ts}]
indent_size = 2
max_line_length = 80

[{Makefile.*, makefile, Makefile, GNUmakefile, *.mk}]
indent_style = tab
tab_width = 4

[{*.tab, *.tsv}]
indent_style = tab
tab_width = 1


[*.md]
trim_trailing_whitespace = false


[*.py]
max_line_length = 80

[jest.config]
indent_size = 2



[{makefile,Makefile}]
indent_style = tab
tab_width = 4

[Makefile.*]
indent_style = tab
tab_width = 4

[*.{tab,tsv}]
indent_style = tab
tab_width = 1
